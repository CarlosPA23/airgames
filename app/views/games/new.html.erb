<div class="form container">
  <h1>Oh! Do you have a new game pal?</h1>
  <%= simple_form_for (@game) do |f| %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :price %>
    <%= f.input :category, collection: ["Console", "Board", "Sports", "Silly"] %>
    <%= f.input :photo, as: :file %>
    <%= f.submit "Add your game", class: "btn btn-primary" %>
  <% end %>
  <div id="back"><%= link_to "Back", games_path, class: "btn btn-primary" %></div>
</div>
