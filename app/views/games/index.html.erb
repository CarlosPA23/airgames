<h1 class='text-center mt-5'>Our games</h1>
  <p class='text-center'><%= link_to "New game", new_game_path %></p>


<div class="row justify-content-center">
  <div class="col-sm-8 my-3">
    <%= form_with url: games_path, method: :get, class: "d-flex" do %>
      <%= text_field_tag :query,
            params[:query],
            class: "form-control",
            placeholder: "Type a keyword"
        %>
      <%= submit_tag "Search", name: "", class: "btn btn-primary" %>
    <% end %>
  </div>
 </div>


<div id='game-list' class='mt-3'>
  <div class="row justify-content-around">
    <% @games.each do |game| %>
        <div class='game-card p-0 col-4 ms-1 me-1 mt-5'>
          <%= cl_image_tag(game.photo.key, :class => 'game-card-img') %>
          <div class=''>
            <h3 class='text-center mt-2'mb-2><%= link_to game.title, game_path(game) %></h3>
            <p class='text-center'><%= game.category %></p>
          </div>
        </div>
    <% end %>
  </div>
</div>
