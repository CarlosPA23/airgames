<h1><%= @game.title %></h1>

<p><%= @game.description %></p>
<p><%= @game.price %></p>
<p><%= @game.category %></p>
<% if policy(@game).edit? %>
  <%= link_to "Edit", edit_game_path(@game) %>
<% end %>
<% if policy(@game).destroy? %>
  <%= link_to "Delete", game_path(@game), data: { turbo_method: :delete } %>
<% end %>
<%= link_to "Back", games_path %>
