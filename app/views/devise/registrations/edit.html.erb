
<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-12 col-md-8 col-lg-6">
      <h2 class='text-center'>Edit <%= resource_name.to_s.humanize %></h2>
      <%= link_to '<i class="fa-solid fa-arrow-left-long"></i> back'.html_safe, :back, class: 'back mb-3' %>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
          <% end %>

          <%= f.input :first_name,
                      hint: "leave it blank if you don't want to change it",
                      required: false,
                      input_html: { autocomplete: "off" } %>
          <%= f.input :last_name,
                      hint: "leave it blank if you don't want to change it",
                      required: false,
                      input_html: { autocomplete: "off" } %>
          <%= f.input :email, required: true, autofocus: true %>
          <%= f.input :password,
                      hint: "leave it blank if you don't want to change it",
                      required: false,
                      input_html: { autocomplete: "off" } %>
          <%= f.input :password_confirmation,
                      required: false,
                      input_html: { autocomplete: "off" } %>
          <%= f.input :current_password,
                      hint: "we need your current password to confirm your changes",
                      required: true,
                      input_html: { autocomplete: "current-password" } %>
          <%= f.input :photo, as: :file %>
        </div>

        <div class="form-actions text-center">
          <%= f.button :submit, "Update", class: 'btn btn-primary' %>
        </div>
      <% end %>

      <h3 class="mt-4 text-center">Cancel my account</h3>

      <div class="text-center">Unhappy? <%= button_to "Delete my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: 'mt-3' %></div>
    </div>
  </div>
</div>
